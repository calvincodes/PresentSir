<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/chalkboard_bg">
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:weightSum="100">
    	
        		<LinearLayout 
        		    android:layout_width="match_parent"
    				android:layout_height="0dp"
    				android:layout_weight="2"/>
        		
        		<LinearLayout 
        		    android:layout_width="match_parent"
    				android:layout_height="0dp"
    				android:layout_weight="10"
    				android:orientation="horizontal"
    				android:weightSum="1">
    				
        		    		<LinearLayout 
			        		    android:layout_width="0dp"
			    				android:layout_height="match_parent"
			    				android:layout_weight="0.05"/>
        		    		
        		    		
        		    		<RadioGroup
			        		    android:id="@+id/year_rg"
			        		    android:layout_width="0dp"
			    				android:layout_height="match_parent"
			    				android:layout_weight="0.9"
			    				android:orientation="horizontal"
			    				android:weightSum="4">
			    				
					        		    <RadioButton 
					        		        	android:layout_width="0dp" 
											    android:layout_height="fill_parent"
											    android:layout_weight="1" 
											    android:id="@+id/year_1_rb"
											    android:text="I"
											    android:textSize="28sp"
											    android:textColor="#FFFFFF"
											    android:checked="false"/>
									    
									    <RadioButton 
									        	android:layout_width="0dp" 
											    android:layout_height="fill_parent"
											    android:layout_weight="1"
											    android:id="@+id/year_2_rb"
												android:text="II"
												android:textSize="28sp"
											    android:textColor="#FFFFFF"
												android:checked="false"/>
									    
									    <RadioButton 
									        	android:layout_width="0dp" 
											    android:layout_height="fill_parent"
											    android:layout_weight="1"
											    android:id="@+id/year_3_rb"
												android:text="III"
												android:textSize="28sp"
											    android:textColor="#FFFFFF"
												android:checked="false"/>
									    
									    <RadioButton 
									        	android:layout_width="0dp" 
											    android:layout_height="fill_parent"
											    android:layout_weight="1"
											    android:id="@+id/year_4_rb"
												android:text="IV"
												android:textSize="28sp"
											    android:textColor="#FFFFFF"
												android:checked="false"/>
			        		    
			        		</RadioGroup>
        		
        		    		<LinearLayout 
			        		    android:layout_width="0dp"
			    				android:layout_height="match_parent"
			    				android:layout_weight="0.05"/>
        		    
        		</LinearLayout>
        		
        		<LinearLayout 
        		    android:layout_width="match_parent"
    				android:layout_height="0dp"
    				android:layout_weight="5"/>
        
        		<LinearLayout 
        		    android:layout_width="match_parent"
    				android:layout_height="0dp"
    				android:layout_weight="75"
    				android:orientation="horizontal"
    				android:weightSum="2">
        		    		
		        		    <LinearLayout 
		        		        android:layout_width="0dp"
			    				android:layout_height="match_parent"
			    				android:layout_weight="1"
			    				android:orientation="horizontal"
			    				android:weightSum="1">
									    
		        		        		<LinearLayout 
		        		        		    android:layout_width="0dp"
						    				android:layout_height="match_parent"
						    				android:layout_weight="0.2"/>
									    
				        		        <RadioGroup
				        		            android:id="@+id/branch_rb1"
						        		    android:layout_width="0dp"
						    				android:layout_height="match_parent"
						    				android:layout_weight="0.8"
						    				android:orientation="vertical"
						    				android:weightSum="5">
						    				
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_bt"
													    android:text="BT"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_ce"
													    android:text="CE"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_cl"
													    android:text="CL"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_cse"
													    android:text="CSE"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_cst"
													    android:text="CST"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
						        		    
						        		</RadioGroup>
		        		        
		        		    </LinearLayout>
		        		    
		        		    <LinearLayout 
		        		        android:layout_width="0dp"
			    				android:layout_height="match_parent"
			    				android:layout_weight="1"
			    				android:orientation="horizontal">
				        		        
		        		        		<LinearLayout 
		        		        		    android:layout_width="0dp"
						    				android:layout_height="match_parent"
						    				android:layout_weight="0.2"/>
									    
				        		        <RadioGroup
				        		            android:id="@+id/branch_rb2"
						        		    android:layout_width="0dp"
						    				android:layout_height="match_parent"
						    				android:layout_weight="0.8"
						    				android:orientation="vertical"
						    				android:weightSum="6">
						    				
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_dd"
													    android:text="DD"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_ece"
													    android:text="ECE"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_eee"
													    android:text="EEE"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_ep"
													    android:text="EP"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_me"
													    android:text="ME"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
					        		            	
					        		            	<RadioButton 
							        		        	android:layout_width="fill_parent" 
													    android:layout_height="0dp"
													    android:layout_weight="1" 
													    android:id="@+id/branch_mndc"
													    android:text="MnC"
													    android:textSize="28sp"
													    android:textColor="#FFFFFF"
													    android:checked="false"/>
						        		    
						        		</RadioGroup>
		        		        
		        		    </LinearLayout>
        		    
        		</LinearLayout>
        		
        		<LinearLayout 
        		    android:layout_width="match_parent"
    				android:layout_height="0dp"
    				android:layout_weight="5"/>
        
    
    </LinearLayout>

</LinearLayout>
