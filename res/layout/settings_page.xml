<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@drawable/chalkboard_bg">
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
        android:weightSum="2">
        
        <LinearLayout
	        android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:orientation="vertical"
	        android:layout_weight="0.05"/>

		    <TextView
		        android:id="@+id/settings_title_st"
		        android:layout_width="match_parent"
			    android:layout_height="0dp"
		        android:layout_weight="0.25"
		        android:background="?android:attr/selectableItemBackground"
			    android:text="Settings"
			    android:textSize="28sp"
			    android:gravity="center|top"
			    android:textColor="#FFFFFF"/>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:orientation="vertical"
		        android:layout_weight="1"
		        android:weightSum="4.5">
		        
		        		<LinearLayout
				            android:layout_width="match_parent"
						    android:layout_height="0dp"
						    android:orientation="horizontal"
					        android:layout_weight="0.55"/>
		        
				        <LinearLayout
				            android:layout_width="match_parent"
						    android:layout_height="0dp"
						    android:orientation="horizontal"
					        android:layout_weight="1.4"
					        android:weightSum="2">
					        
						            <LinearLayout 
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.55"/>
						            
						            <TextView
						                android:id="@+id/use_tt_templates_tv_stngp"
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.9"
									    android:background="?android:attr/selectableItemBackground"
									    android:text="TimeTable\nTemplates"
									    android:textSize="28sp"
									    android:gravity="center"
									    android:textColor="#FFFFFF"/>
						            
						            <LinearLayout 
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.55"/>
				            
				        </LinearLayout>
				        
			         	<LinearLayout
				            android:layout_width="match_parent"
						    android:layout_height="0dp"
						    android:orientation="horizontal"
					        android:layout_weight="0.25"/>
				        
				         <LinearLayout
				            android:layout_width="match_parent"
						    android:layout_height="0dp"
						    android:orientation="horizontal"
					        android:layout_weight="0.75"
					        android:weightSum="2">
					        
						            <LinearLayout 
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.525"/>
						            
						            <TextView
						                android:id="@+id/add_course_tv_stngp"
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.95"
									    android:background="?android:attr/selectableItemBackground"
									    android:text="Add Course"
									    android:textSize="28sp"
									    android:gravity="center"
									    android:textColor="#FFFFFF"/>
						            
						            <LinearLayout 
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.525"/>
				            
				        </LinearLayout>
				        
				        <LinearLayout
				            android:layout_width="match_parent"
						    android:layout_height="0dp"
						    android:orientation="horizontal"
					        android:layout_weight="0.25"/>
				        
				         <LinearLayout
				            android:layout_width="match_parent"
						    android:layout_height="0dp"
						    android:orientation="horizontal"
					        android:layout_weight="0.75"
					        android:weightSum="2">
					        
						            <LinearLayout 
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.7"/>
						            
						            <TextView
						                android:id="@+id/sounds_tv_stngp"
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.6"
									    android:background="?android:attr/selectableItemBackground"
									    android:text="Sounds"
									    android:textSize="28sp"
									    android:gravity="center"
									    android:textColor="#FFFFFF"/>
						            
						            <LinearLayout 
						                android:layout_width="0dp"
									    android:layout_height="match_parent"
									    android:layout_weight="0.7"/>
				            
				        </LinearLayout>
				        
				         <LinearLayout
				            android:layout_width="match_parent"
						    android:layout_height="0dp"
						    android:orientation="horizontal"
					        android:layout_weight="0.55"/>
		        
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:orientation="vertical"
		        android:layout_weight="0.7"/>
     
     </LinearLayout>

</LinearLayout>
